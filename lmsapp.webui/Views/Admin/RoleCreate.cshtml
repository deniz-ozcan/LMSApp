@model RoleModel

@section title {<title>Create Role | LMSApp</title>}
<div class="container-sm mt-5" >
  <div class="row justify-content-center">
    <div class="card col-6 p-0">
      <div class="card-header bg-dark" style="color:#109801;font-size:30px;">
        <div class="card-title text-center pt-3">Create Role</div>
      </div>
      <div class="card-body">
        <form class="form-group" asp-controller="Admin" asp-action="RoleCreate" method="POST">
          <div class="form-group">
            <div class="row justify-content-center">
              <div class="col-7 mb-3">
                <input class="form-control" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>
              <div class="col-6 d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-primary">Save Role</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>



@section JavaScript
{
  <script src="~/js/jquery.validate.js"></script>
  <script src="~/js/jquery.validate.unobtrusive.js"></script>
}