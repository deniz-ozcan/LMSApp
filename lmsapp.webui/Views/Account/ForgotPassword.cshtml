@section title {<title>Forgot | ScrapApp</title>}
<div class="container-sm mt-5" >
  <div class="row justify-content-center">
    <div class="card col-6 p-0">
      <div class="card-header bg-info">
        <div class="card-title text-center pt-3">Forgot Password</div>
      </div>
      <div class="card-body">
        <form class=" align-self-center" asp-controller="Account" asp-action="ForgotPassword" method="POST">
          <div class="form-group row mb-3">
            <input class="form-control" type="email" name="Email" placeholder="E-Mail">
          </div>         
          <div class="form-group row">
              <button type="submit" class="btn btn-outline-info">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
