@model List<AssigntmentModel>
@section title {
	<title>My Tasks</title>
}
<div class="container-sm mt-3">
	<div class="row justify-content-center">
		<div class="card p-0">
			<div class="card-header" style="background-color: #404040;color:#ff8800">
				<div class="card-title text-center pt-3 fs-3">My Tasks</div>
			</div>
			<div class="card-body">
				<form class="row" asp-controller="Student" asp-action="AssignmetSubmit">
					<table class="table">
						<thead>
							<tr class="coverme">
								<th scope="col"><button class="btn colorbut">Id<span aria-hidden="true"></span></button></th>
								<th scope="col"><button class="btn colorbut">TITLE<span aria-hidden="true"></span></button></th>
								<th scope="col"><button class="btn colorbut">DESCRIPTION<span aria-hidden="true"></span></button></th>
								<th scope="col"><button class="btn colorbut">DUEDATE<span aria-hidden="true"></span></button></th>
								<th scope="col"><button class="btn colorbut">FINISHED<span aria-hidden="true"></span></button></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var assgn in Model)
							{
								<tr class="hoverme">
									<td scope="row">@assgn.Assignment.AssignmentId</td>
									<td scope="row">@assgn.Assignment.Title</td>
									<td scope="row">@assgn.Assignment.Description</td>
									<td scope="row"> @assgn.Assignment.DueDate</td>
									<td scope="row">
										<div class="row justify-content-center">
											<input type="hidden" name="assignmentIds" value="@assgn.Assignment.AssignmentId">
											<input class="form-check-input"  name="submitedAssn" value="@assgn.AssigneeId" onclick="return @((!assgn.IsSubmitted).ToString().ToLower());"  type="checkbox" @(assgn.IsSubmitted ? "checked" : "")>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
					<div class="row mt-3">
						<div class="col-3 mx-auto">
							<div class="text-center">
								<button type="submit" class="btn btn-outline-primary">Submit Assignments</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>